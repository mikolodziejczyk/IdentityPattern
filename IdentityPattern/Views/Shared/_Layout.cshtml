<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @{Html.RenderPartial("_DefaultHeadContent");}
    @RenderSection("AdditionalHead", required: false)
</head>
<body>
    @* top nav bar *@

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!-- The header logo goes here  -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="padding: 20px 20px 10px 20px;">
                    @*<img src="@Url.Content("~/Content/images/logo.jpg")" title="Strona główna" />*@
                    My App
                </a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <!-- a standard nabvar goes here  -->
                    @*<li><a href="@Url.Action("Index", "Home")" title="Strona startowa">Start</a></li>*@

                    @RenderSection("AdditionalNavBar", required: false)
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="dropdown-toggle" href="@Url.Action("Details", "User", new { id = 0 /*@currentUser.Id*/ })" data-toggle="dropdown">
                            <img class="-mko-current-user-icon" src="@Url.Content("~/dist/mko-resources/images/icons/userprofile.svg")" alt="" />&nbsp;@User.Identity.Name&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Moje konto</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("ChangePassword","Account")">Zmień hasło</a></li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <a href="@Url.Action("SignOut", "Account", new { id = 0 /*@currentUser.Id*/ })">
                                    Wyloguj
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                    </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9 col-lg-10 col-md-push-3 col-lg-push-2" id="content">
                @RenderSection("PageHeader", required: false)
                @RenderBody()
            </div>
            <div class="col-md-3 col-lg-2 col-md-pull-9 col-lg-pull-10" id="sidebar">
                <div class="list-group">
                    @RenderSection("PageNavigation", required: false)
                    @{Html.RenderPartial("_SidebarMenu"); }
                </div>
            </div>
        </div>
    </div>

    @{Html.RenderPartial("_DefaultFinalScripts");}
</body>
</html>
